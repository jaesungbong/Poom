<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.project.poom.ImageViewRounded
        android:id="@+id/tab3_item_img"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY"
        android:src="@drawable/one" />

    <TextView
        android:id="@+id/tab3_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="26dp"
        android:text="이름"
        android:textColor="#686868"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:orientation="vertical" 
        android:layout_weight="1">

        <TextView
            android:id="@+id/tab3_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textColor="#686868"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tab3_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:layout_marginLeft="10dp"
            android:textColor="#A1A1A1"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tab3_item_donationamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1100"
        android:textColor="#FF6454"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:text="포인트"
        android:textColor="#FF6454"
        android:textSize="12sp" />

</LinearLayout>