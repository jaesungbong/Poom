<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 상단부 -->

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="186dp" >

        <ImageView
            android:id="@+id/main_tab1_list_item_img"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_sample_image" />

        <TextView
            android:id="@+id/main_tab1_list_item_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="D-"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/main_tab1_list_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="27"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/main_tab1_list_item_mainsubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="고양이 척추 아파요 도와줘"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/donate_gradient" />

        <ImageView
            android:id="@+id/howmanydanator"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/con_icon_mark" />

        <TextView
            android:id="@+id/main_tab1_list_item_fund_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:text="145"
            android:textColor="#FFFFFF" />
    </FrameLayout>

    <!-- 하단부 -->

    <FrameLayout
        android:id="@+id/FrameLayout2"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <SeekBar
                android:id="@+id/main_tab1_list_item_progressBar"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxHeight="24dp"
                android:minHeight="24dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:progressDrawable="@drawable/styled_progress"
                android:thumb="@drawable/progress_icon_dog_to100" />

            <LinearLayout
                android:id="@+id/textpercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/main_tab1_list_item_progressBar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="78dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/current_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignRight="@+id/main_tab1_list_item_progressBar"
                android:layout_alignBottom="@+id/main_tab1_list_item_progressBar"
                android:layout_marginRight="20dp"
                android:src="@drawable/main_progress_pointer" />

        </RelativeLayout>

        <TextView
            android:id="@+id/main_tab1_list_item_cheerup_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="65dp"
            android:text="35"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/con_icon_cheerup" />

        <TextView
            android:id="@+id/main_tab1_list_item_progressmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="41dp"
            android:text="힘이안나 도와줘"
            android:textColor="#FF6454" />

        <TextView
            android:id="@+id/main_tab1_list_item_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="19dp"
            android:layout_marginRight="10dp"
            android:text="3,000,000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF6454"
            android:textSize="30sp" />
    </FrameLayout>

</LinearLayout>