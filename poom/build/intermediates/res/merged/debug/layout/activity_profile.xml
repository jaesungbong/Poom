<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <Button
            android:id="@+id/activity_profile_editbtn"
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/profile_btn_setting" />

        <com.project.poom.ImageViewRounded
            android:id="@+id/activity_profile_img"
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_sample_image" />

        <TextView
            android:id="@+id/activity_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:text="name"
            android:textColor="#FF6454"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activity_profile_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="당신을 표현해주세요"
            android:textColor="#686868"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        android:layout_weight="1"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/profile_item1"
            android:layout_width="360dp"
            android:layout_height="54dp" 
            android:background="@drawable/profile_btn_medal">

            <TextView
                android:id="@+id/activity_profile_badge_variable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="50dp"
                android:gravity="right"
                android:textColor="#FF877C"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="25dp"
                android:src="@drawable/profile_icon_arrow" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/profile_item2"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:background="@drawable/profile_btn_donation" >

            <TextView
                android:id="@+id/activity_profile_donate_variable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="50dp"
                android:gravity="right"
                android:textColor="#FF877C"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="25dp"
                android:src="@drawable/profile_icon_arrow" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/profile_item3"
            android:layout_width="360dp"
            android:layout_height="54dp" 
            android:background="@drawable/profile_btn_text">

            <TextView
                android:id="@+id/activity_profile_letter_variable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="50dp"
                android:gravity="right"
                android:textColor="#FF877C"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="25dp"
                android:src="@drawable/profile_icon_arrow" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>