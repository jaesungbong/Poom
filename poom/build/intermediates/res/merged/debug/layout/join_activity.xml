<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BB000000" >

    <Button
        android:id="@+id/ja_xbox"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/request_btn_delete" />

    <FrameLayout
        android:id="@+id/join_container"
        android:layout_width="309dp"
        android:layout_height="475dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_bg"
        android:gravity="center_horizontal" >

        <ImageView
            android:layout_width="105dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/login_text_welcome" />

        <Button
            android:id="@+id/prev"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/btn_cancel" />

        <Button
            android:id="@+id/next"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/btn_next" />
    </FrameLayout>

    <ImageView
        android:id="@+id/join_one_img"
        android:layout_width="90dp"
        android:layout_height="118dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="430dp"
        android:src="@drawable/login_graphic" />
    
    <ImageView
        android:id="@+id/join_two_img"
        android:layout_width="90dp"
        android:layout_height="118dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="430dp"
        android:src="@drawable/login_graphic"
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/join_three_img"
        android:layout_width="90dp"
        android:layout_height="118dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="430dp"
        android:src="@drawable/login_graphic"
        android:visibility="invisible" />

</FrameLayout>