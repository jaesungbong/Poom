<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="244dp"
    android:layout_height="323dp"
    android:background="@drawable/donate_receipt_bg"
    android:minHeight="323dp"
    android:minWidth="244dp" >

    <TextView
        android:id="@+id/myinterest_item_view_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_gravity="center_horizontal"
        android:text="3,000,000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF6454"
        android:textSize="18sp" />

    <ListView 
        android:id="@+id/bd_list"
        android:layout_width="194dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp">
    </ListView>

    <Button
        android:id="@+id/bd_dismiss"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="23dp"
        android:text=""
        android:background="@drawable/btn_confirm" />

</FrameLayout>