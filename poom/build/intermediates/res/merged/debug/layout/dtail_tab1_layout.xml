<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/storylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1">
    </ListView>

    <FrameLayout
        android:id="@+id/FrameLayout2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#FFFFFF" >

        <Button
            android:id="@+id/share"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/bottom_btn_share" />

        <Button
            android:id="@+id/share_energy"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="165dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_btn_donate" />

        <ImageView
            android:id="@+id/dtail_tab1_layout_footmark"
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/bottom_btn__footmark"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dtail_tab1_layout_footmarking"
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/bottom_btn__footmark_marking" 
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>