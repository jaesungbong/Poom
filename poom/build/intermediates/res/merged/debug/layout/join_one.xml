<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125dp" >

        <EditText
            android:id="@+id/nickname"
            android:layout_width="241dp"
            android:layout_height="40dp"
            android:background="@drawable/login_input_frame"
            android:hint="닉네임을 입력해 주세요"
            android:paddingLeft="15dp"
            android:textColorHint="#686868"
            android:textSize="12sp" >

            <requestFocus />
        </EditText>
        
        <ImageView
                android:id="@+id/delete_btn_nick"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="13dp"
                android:src="@drawable/request_btn_delete"
                android:visibility="gone" />
    </FrameLayout>

    <Button
        android:id="@+id/join_one_check_duplication"
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/btn_doublecheck"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/join_one_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="warning"
        android:textColor="#FF0000"
        android:visibility="invisible"
        android:layout_marginTop="9dp" />

</LinearLayout>