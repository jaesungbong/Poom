<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:orientation="vertical"
    android:background="@drawable/newsdetail_frame" >
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/newspopup_img" 
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:scaleType="fitXY"
            android:src="@drawable/login_graphic"/>
        
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70dp">
            
            <TextView 
                android:id="@+id/newspopup_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#686868"
                android:text="nick"/>
            
            <TextView 
                android:id="@+id/newspopup_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#A5A5A5"
                android:text="date"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        
        <ImageView 
            android:id="@+id/newspopup_x"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/newsdetail_btn_delete"
            android:layout_gravity="right"/>
    </FrameLayout>
    
    <TextView 
        android:id="@+id/newspopup_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:textColor="#686868"
        android:text="content"/>

    <ListView
        android:id="@+id/news_pop_up_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp" >
    </ListView>

</LinearLayout>
