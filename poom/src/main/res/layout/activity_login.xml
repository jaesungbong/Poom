<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BB000000" >

    <Button
        android:id="@+id/xbox"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/request_btn_delete" />

    <FrameLayout
        android:layout_width="309dp"
        android:layout_height="475dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_bg"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/login_text_login" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="85dp" >

            <EditText
                android:id="@+id/email_text"
                android:layout_width="241dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_input_frame"
                android:hint="이메일입력"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColorHint="#686868"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/delete_btn_email"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="13dp"
                android:src="@drawable/request_btn_delete"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp" >

            <EditText
                android:id="@+id/password_text"
                android:layout_width="241dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_input_frame"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColorHint="#686868"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/delete_btn_password"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="13dp"
                android:src="@drawable/request_btn_delete"
                android:visibility="gone" />
        </FrameLayout>
        
        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="warning"
            android:textColor="#FF0000"
            android:layout_marginTop="180dp"
            android:visibility="invisible" />
        
        <Button
                android:id="@+id/login_btn"
                android:layout_width="241dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_login"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200dp" />
        
        <ImageView 
            android:src="@drawable/donate_coments_line"
            android:layout_width="241dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dp"/>
        
        <Button
                android:id="@+id/facebook_login_btn"
                android:layout_width="241dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_facelogin"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="280dp"
                android:visibility="gone" />
        
        <Button
                android:id="@+id/join"
                android:layout_width="241dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_signup"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="280dp" />
        
    </FrameLayout>
    
    <ImageView 
            android:src="@drawable/login_graphic"
            android:layout_width="90dp"
            android:layout_height="118dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="430dp"/>
</FrameLayout>