<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/list_frame_bg_new">

    <com.project.poom.ImageViewRounded
        android:id="@+id/alarmlistimage"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alarm_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우리 복남이를 도와 주세요"
            android:textSize="12sp"
            android:textColor="#686868" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="13dp" >
            
            <ImageView 
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/list_icon_clock"/>

            <TextView
                android:id="@+id/alramlistdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:textSize="11sp"
                android:textColor="#A1A1A1"
                android:text="몇월몇일" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>