<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="63dp" >

        <com.project.poom.ImageViewRounded
            android:id="@+id/activity_editprofile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/profile_sample_image" />

        <Button
            android:id="@+id/activity_editprofile_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="105dp"
            android:background="@drawable/profile_btn_photo" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="83dp"
            android:layout_height="32dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile_text_name" />

        <EditText
            android:id="@+id/activity_editprofile_name"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/profile_input_frame"
            android:hint="이름을 입력해주세요"
            android:paddingLeft="18dp"
            android:textSize="18sp"
            android:textColorHint="#FF6454" >

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="83dp"
            android:layout_height="32dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile_text_introduce" />

        <EditText
            android:id="@+id/activity_editprofile_introduce"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/profile_input_frame"
            android:hint="당신을 표현해 주세요"
            android:paddingLeft="18dp" 
            android:textSize="18sp"
            android:textColorHint="#FF6454" />
    </LinearLayout>

</LinearLayout>