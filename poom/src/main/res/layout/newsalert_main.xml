<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <EditText
        android:id="@+id/newsalert_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="어떤 새소식이 있었나요?"
        android:background="#FFFFFF"
        android:textSize="15sp"
        android:textColorHint="#686868"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:textCursorDrawable="@drawable/color_cursor" />

    <it.sephiroth.android.library.widget.HListView
        android:id="@+id/naimglist"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="290dp"
        android:background="#11000000" >
    </it.sephiroth.android.library.widget.HListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F6F6F6"
        android:orientation="horizontal"
        android:layout_marginTop="469dp" >

        <ImageButton
            android:id="@+id/newsalert_callgal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:background="@drawable/upload_icon_camera"/>
    </LinearLayout>
</FrameLayout>