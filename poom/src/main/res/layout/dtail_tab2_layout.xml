<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/newslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="#FFFFFF" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/dtail_tab2_layout_footmark"
                android:layout_width="28dp"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/bottom_btn__footmark"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/dtail_tab2_layout_footmarking"
                android:layout_width="28dp"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/bottom_btn__footmark_marking"
                android:visibility="invisible" />
        </FrameLayout>

        <Button
            android:id="@+id/share2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/bottom_btn_share" />

        <Button
            android:id="@+id/enroll_news"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@drawable/donate_pop_btn_plus" />

        <Button
            android:id="@+id/share_energy2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="165dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bottom_btn_donate" />
    </LinearLayout>

</LinearLayout>